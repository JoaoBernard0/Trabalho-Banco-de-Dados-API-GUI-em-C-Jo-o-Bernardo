<Window x:Class="InventoryGui.ProductEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Produto" Height="320" Width="420" WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="Nome:" FontWeight="SemiBold"/>
            <TextBox x:Name="TxtName" Height="28"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,0,0,8">
            <TextBlock Text="PreÃ§o (R$):" FontWeight="SemiBold"/>
            <TextBox x:Name="TxtPrice" Height="28"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,8">
            <TextBlock Text="Categoria:" FontWeight="SemiBold"/>
            <ComboBox x:Name="CmbCategories" Height="28" DisplayMemberPath="Name" SelectedValuePath="Id"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
            <Button x:Name="BtnSave" Content="Salvar" Width="100" Height="30" Click="BtnSave_Click"/>
            <Button Content="Cancelar" Width="100" Height="30" Click="BtnCancel_Click"/>
        </StackPanel>

    </Grid>
</Window>
